#!/bin/bash

# Exit immediately if a command exits with a non-zero status.
set -e

echo "› Removing packages..."

# --- Pacman Packages ---
{{- if .to_remove_packages.pacman }}
sudo pacman -Rns --noconfirm {{ .to_remove_packages.pacman | join " " }}
sudo updatedb
{{- end }}


echo "✅ Uninstallation complete!"
